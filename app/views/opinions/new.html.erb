<% title "New Opinion" %>
<h1>New opinion</h1>

<% form_for(@opinion) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :agent_id %><br />
    <%= f.text_field :agent_id %>
  </p>
  <p>
    <%= f.label :service_id %><br />
    <%= f.text_field :service_id %>
  </p>
  <p>
    <%= f.label :belief %><br />
    <%= f.text_field :belief %>
  </p>
  <p>
    <%= f.label :disbelief %><br />
    <%= f.text_field :disbelief %>
  </p>
  <p>
    <%= f.label :uncertainty %><br />
    <%= f.text_field :uncertainty %>
  </p>
  <p>
    <%= f.submit 'Stwórz opinię' %>
  </p>
<% end %>